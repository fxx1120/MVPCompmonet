<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/public_include_title"/>
    <include layout="@layout/public_include_line"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f4f5"/>

    <LinearLayout
        android:id="@+id/user_information"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/public_default_avater"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="张一蛋"
                android:textColor="#666"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/user_mobile"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="189****8220"
                android:textColor="#666"
                android:textSize="12sp"
                />
        </LinearLayout>
        <ImageView
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/public_chevron_right_black_24dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f6f6f6"/>

    <LinearLayout
        android:id="@+id/user_changerole"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_height="46dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/main_user_role"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="切换角色"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/public_chevron_right_black_24dp"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f6f6f6"/>

    <LinearLayout
        android:id="@+id/user_changpassword"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_height="46dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/main_user_password"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="更改密码"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/public_chevron_right_black_24dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f6f6f6"/>
    <LinearLayout
        android:id="@+id/user_clear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_height="46dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/main_app_cache"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="清除缓存"/>

        <TextView
            android:id="@+id/cache_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="清除缓存"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/public_chevron_right_black_24dp"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f9f9f9"/>
    <LinearLayout
        android:id="@+id/user_version"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_height="46dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="当前版本"/>
        <TextView
            android:id="@+id/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="10dp"
            android:text="V 2.0.2"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f9f9f9"/>
    <LinearLayout
        android:id="@+id/user_exit"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_height="46dp">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/main_app_exit"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="退出账号"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/public_chevron_right_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f9f9f9"/>
</LinearLayout>
